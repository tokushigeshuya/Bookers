<% if flash[:notice] %>
  <p　class=destroy><%= flash[:notice] %></p>
<% end %>


<h1>Books</h1>

<table>
  <thead>
    <tr>
    <th>title</th>
    <th>body</th>
    <th><div></div></th>
    </tr>
  </thead>
  
<% @books.each do |book| %>

<tbody>
    <tr>
      

  <td><%= book.title %></td>
  
  <td><%= book.body %></td>
  
  <td><%= link_to 'Show', book_path(book.id)%></td>
  <td><%= link_to 'Edit', edit_book_path(book.id)%></td>
  <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
  

<% end %>

    </tr>
  </tbody>
</table>


  <% if @book.errors.any? %>
  <div class=errors>
  <%= @book.errors.count %>件のerrorsが発生しました
  </div>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
  <% end %>


<%= form_with model: @book, local: true do |f| %>
<h1>new book</h1>
<p>title</p>
  <%= f.text_field :title %>
	
  <p>body</p>
  <%= f.text_area :body %>
	
  <%= f.submit 'Create Book' %>
<% end %>
