<% if flash[:notice] %>
  <p　class=update><%= flash[:notice] %></p>
<% end %>

<% if @book.errors.any? %>
  <div class=errors>
  <%= @book.errors.count %>件のerrorsが発生しました
  </div>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
  <% end %>
<%= form_with model: @book, local: true do |f| %>
<h1>Editing Book</h1>
<p>title</p>
  <%= f.text_field :title %>
	
  <p>body</p>
  <%= f.text_area :body %>
	
  <%= f.submit 'Update Book' %>
  
<% end %>
<%= link_to 'show', book_path%>
